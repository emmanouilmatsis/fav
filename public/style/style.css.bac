/* ------- */
/* General */
/* ------- */

a
{
	text-decoration: none;
	color: #fff;
	-webkit-transition: color 0.3s;
	-moz-transition: color 0.3s;
	-o-transition: color 0.3s;
	-ms-transition: background-color 0.3s;
	-transition: color 0.3s;
}

a:hover, a:active
{
	color: #f88;
}

/* Input placeholder text styling */

::-webkit-input-placeholder
{
	color: #000;
}

:-moz-placeholder
{
	color: #000;
}

::-moz-placeholder
{
	color: #000;
}

:-ms-input-placeholder
{
	color: #000;
}

/* JEditable input */

.editable input
{
	background: none;
	-webkit-appearance: caret;
  border: none;

	font-size: 8px;
	letter-spacing: 1px;
	color: #d5d9dd;
}

/* --------- */
/* Structure */
/* --------- */

html
{
	width: 100%;
	height: 100%;
}

body
{
	position: relative;
	width: 100%;
	height: 100%;
	min-width: 500px;
	min-height: 500px;

	background: url(/guinet/public/image/background.jpg) no-repeat center center fixed; 
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	background-size: cover;

	font-family: "Century Gothic", "Lucida Grande", Arial, sans-serif;
}

/* Header */

body > header
{
	position: absolute;
	top: 40px;
	width: 100%;
	height: 60px;

	background: rgba(0, 0, 0, 0.6);
}

/* Header  >  H1 */

body > header > h1
{
	float: left;
	padding: 10px 20px 10px 60px;

	background: #000;
	border-right: 1px #fff solid;

	font-size: 40px;
	font-weight: 900;
	color: #fff;
}

/* Header  >  Nav */

body > header > nav
{
	float: right;
}

body > header > nav > ul > li
{
	float: right;
	margin: 22px 40px 22px 0px;
}

body > header > nav > ul > li > a
{
	font-size: 12px;
	font-weight: 900;
	color: #d5d9dd;
}

/* Content */

body > div#content
{
	position: absolute;
	top: 100px;
	bottom: 40px;
	width: 100%;
}

/* Footer */

body > footer
{
	position: absolute;
	bottom: 0;
	width: 100%;
	height: 40px;
}

body > footer > div
{
	float: right;
	margin: 15px 20px;

	font-size: 10px;
	font-weight: 900;
	color: #ccc;
}

body > footer > div > a
{
	font-size: 10px;
	font-weight: 400;
	color: #ccc;
}

/* ---- */
/* Form */
/* ---- */

.form
{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

	width: 380px;
	height: 220px;
	margin: auto;
	padding: 0px;

	background: #000;
	-moz-box-shadow: 2px 2px 8px 0px #1d1d1d;
	-webkit-box-shadow: 2px 2px 8px 0px #1d1d1d;
	box-shadow: 2px 2px 8px 0px #1d1d1d;

  color: white;
}

.form > h1
{
  padding: 20px;
	font-size: 20px;
	font-weight: 900;
	color: #fff;
}

.form > form
{
  margin: 0px 0px 20px 0px;
  padding: 0px 20px;

	font-size: 12px;
	font-weight: 900;
	color: #fff;
}

.form > form > input
{
  width: 97px;
  height: 15px;

  margin: 0px 10px 0px 0px;
  padding: 5px;

  border: none;

  -moz-box-shadow: inset 0 0 3px #000;
  -webkit-box-shadow: inset 0 0 3px #000;
  box-shadow: inset 0 0 3px #000;
}

.form > form > button
{
  width: 97px;
  height: 25px;

  margin: 0px;
  padding: 5px;

  background: #000;
  -moz-border-radius: 0px;
  -webkit-border-radius: 0px;
  border-radius: 0px;
  text-decoration: none;
  border: solid 1px #fff;

  font-size: 10px;
  font-weight: 900;
  color: #fff;
}

.form > hr
{
  margin: 0px 20px;
  padding: 0px;

  height: 1px;
  background: #fff;
  border: none;
}

/* ------ */
/* iFrame */
/* ------ */

iframe
{
  position: fixed;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  width: 100%;
  height: 100%;

  background: #fff;
  display: none;
}

body > *:not(iframe)
{
  z-index: 1;
}

/* ------- */
/* Message */
/* ------- */

.message
{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

	width: 380px;
	height: 220px;
	margin: auto;
	padding: 0px;

	background: #000;
	-moz-box-shadow: 2px 2px 8px 0px #1d1d1d;
	-webkit-box-shadow: 2px 2px 8px 0px #1d1d1d;
	box-shadow: 2px 2px 8px 0px #1d1d1d;
}

.message > h1
{
  padding: 20px;

	font-size: 40px;
	font-weight: 900;
  line-height: 50px;
	color: #fff;
}

.message > p
{
  padding: 20px;

	font-size: 12px;
	font-weight: 900;
  line-height: 12px;
	color: #fff;
}

.message > img
{
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

	margin: auto;
	padding: 0px;
}

