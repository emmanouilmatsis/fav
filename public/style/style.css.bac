/* Widget Bookmark */

.bookmark
{
}

.bookmark > .window
{
	width: 160px;
	height: 260px;
	margin: 0px;
	padding: 0px;

	background: #000;
	-moz-box-shadow: 2px 2px 8px 0px #1d1d1d;
	-webkit-box-shadow: 2px 2px 8px 0px #1d1d1d;
	box-shadow: 2px 2px 8px 0px #1d1d1d;
}

.bookmark > .window > .titlebar
{
	height: 20px;
	width: 160px;
	margin: 0px;
	padding: 0px;
}

.bookmark > .window > .titlebar > .label
{
	float: left;

  width: 130px;
	height: 10px;
	margin: 0px;
	padding: 5px;

	font-size: 10px;
  line-height: 10px;
	color: #fff;
	letter-spacing: 1px;
}

.bookmark > .window > .titlebar > .button
{
	float: right;

	width: 10px;
	height: 10px;
	margin: 0px;
	padding: 5px;

	background: none;
  border: none;
  box-sizing: content-box;
	cursor: pointer;

	font-size: 12px;
  line-height: 10px;
	color: #fff;

  opacity: 0;
}

.bookmark > .window > .titlebar > .button:hover
{
	opacity: 1;
	-webkit-transition: opacity 0.3s;
	-moz-transition: opacity 0.3s;
	-o-transition: opacity 0.3s;
	-ms-transition: opacity 0.3s;
	transition: opacity 0.3s;
}

.bookmark > .window > .toolbar
{
	width: 160px;
	height: 25px;
	margin: 0px;
	padding: 0px;

	background: url(../image/newItem.png) repeat-x #c5c9cc;
}

.bookmark > .window > .toolbar > .textbox
{
	float: left;

	width: 130px;
	height: 15px;
	margin: 0px;
	padding: 5px;
	
	background: none;
	-webkit-appearance: caret;
	border: none;

	font-size: 10px;
  line-height: 10px;
	color: #000;
}

.bookmark > .window > .toolbar > .button
{
	float: right;

	width: 10px;
	height: 15px;
	margin: 0px;
	padding: 5px;

	background: none;
  border: none;
  box-sizing: content-box;
	cursor: pointer;

	font-size: 12px;
  line-height: 10px;
	color: #000;
}

.bookmark > .window > .listbox
{
	height: 214px;
	width: 160px;
	margin: 0px;
	padding: 0px;

	overflow: auto;
}

.bookmark > .window > .listbox > .item
{
	height: 20px;
	width: 160px;
	margin: 0px;
	padding: 0px;

	border-bottom: 1px solid #4d4d4d;
	background: #2d2d2d;
	-webkit-transition: background 0.3s;
	-moz-transition: background 0.3s;
	-o-transition: background 0.3s;
	-ms-transition: background 0.3s;
	transition: background 0.3s;
}

.bookmark > .window > .listbox > .item:hover
{
	height: 20px;
	width: 160px;
	margin: 0px;
	padding: 0px;

	background: #5d5d5d;
}

.bookmark > .window > .listbox > .item > .link
{
	float: left;

	width: 130px;
	height: 10px;
	margin: 0px;
	padding: 5px;

	font-size: 10px;
  line-height: 10px;
	color: #d5d9dd;
	letter-spacing: 1px;
  text-decoration: none;
  text-transform: capitalize;
  white-space: nowrap;
  overflow: hidden;
}

.bookmark > .window > .listbox > .item > .button
{
	float: right;

	width: 10px;
	height: 10px;
	margin: 0px;
	padding: 5px;

	background: none;
  border: none;
  box-sizing: content-box;
	cursor: pointer;

	font-size: 12px;
  line-height: 10px;
	color: #fff;

  opacity: 0;
}

.bookmark > .window > .listbox > .item > .button:hover
{
	opacity: 1;
	-webkit-transition: opacity 0.3s;
	-moz-transition: opacity 0.3s;
	-o-transition: opacity 0.3s;
	-ms-transition: opacity 0.3s;
	transition: opacity 0.3s;
}

/* Widget Note */

.note
{
  display: inline-block;
}

.note > .window
{
	width: 160px;
	height: 260px;
	margin: 0px;
	padding: 0px;

	background: #000;
	-moz-box-shadow: 2px 2px 8px 0px #1d1d1d;
	-webkit-box-shadow: 2px 2px 8px 0px #1d1d1d;
	box-shadow: 2px 2px 8px 0px #1d1d1d;
}

.note > .window > .titlebar
{
	width: 160px;
	height: 20px;
	margin: 0px;
	padding: 0px;
}

.note > .window > .titlebar > .label
{
  width: 150px;
	height: 10px;
	margin: 0px;
	padding: 5px;

	font-size: 10px;
  line-height: 10px;
	color: #fff;
	letter-spacing: 1px;
}

.note > .window > .toolbar
{
	width: 160px;
	height: 25px;
	margin: 0px;
	padding: 0px;

	background: url(../image/newItem.png) repeat-x #c5c9cc;
}

.note > .window > .toolbar > .dropdown
{
	float: left;

	width: 150px;
	height: 15px;
	margin: 0px;
	padding: 5px;
	
	background: none;
	border: none;
  box-sizing: content-box;

  appearance: none;
  -webkit-appearance: none;
  -moz-appearance: none;
  text-indent: 0.01px;
  text-overflow: "";
	cursor: pointer;

	font-size: 10px;
  line-height: 10px;
	color: #000;
}

.note > .window > .listbox
{
	width: 160px;
	height: 214px;
	margin: 0px;
	padding: 0px;

	overflow: auto;
}

.note > .window > .listbox > .item
{
	width: 160px;
  height: auto;
	margin: 0px;
	padding: 0px;

	border-bottom: 1px solid #4d4d4d;
	background: #5d5d5d;
	background: #2d2d2d;
}

.note > .window > .listbox > .item > .label
{
	width: 150px;
  height: auto;
	margin: 0px;
	padding: 5px;

	font-size: 9px;
  line-height: 15px;
	color: #d5d9dd;
	letter-spacing: 1px;
}
